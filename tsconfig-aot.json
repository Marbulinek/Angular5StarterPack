{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "inlineSources": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "suppressImplicitAnyIndexErrors": true
  },
  "angularCompilerOptions": {
    "skipMetadataEmit" : true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}